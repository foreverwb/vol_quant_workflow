# =============================================================================
# 波动率分析系统 v2.0 - 环境变量配置
# =============================================================================
# 复制此文件为 .env 并根据需要修改
# 所有参数都有默认值，可选择性覆盖

# ======================== 蒙特卡洛模拟 ========================
MONTE_CARLO_SIMULATIONS=10000

# ======================== 无风险利率（用于BS模型） ========================
RISK_FREE_RATE=0.05

# ======================== 概率门槛 ========================
# L>=1.0时做多波动率概率下限
PROB_LONG_L1_0=0.55
# L>=1.5时
PROB_LONG_L1_5=0.60
# L>=2.0时
PROB_LONG_L2_0=0.65

# ======================== 做多波动率权重 ========================
WEIGHT_VRP_LONG=0.25
WEIGHT_GEX_LONG=0.18
WEIGHT_VEX_LONG=0.18
WEIGHT_CARRY_LONG=0.08
WEIGHT_SKEW_LONG=0.08

# ======================== 做空波动率权重 ========================
WEIGHT_VRP_SHORT=0.30
WEIGHT_GEX_SHORT=0.12
WEIGHT_CARRY_SHORT=0.18

# ======================== 决策门槛 ========================
# 做多波动率L分数门槛
DECISION_THRESHOLD_LONG=1.00
# 做空波动率S分数门槛
DECISION_THRESHOLD_SHORT=1.00
# 概率门槛
PROB_THRESHOLD=0.55

# ======================== Edge门槛 ========================
# Edge EV必须>0
EDGE_EV_THRESHOLD=0
# Edge最低盈亏比
EDGE_RR_THRESHOLD=1.5

# ======================== 触发线相关 ========================
# 距VOL TRIGGER阈值%(视为中性)
TRIGGER_NEUTRAL_PCT=0.002

# ======================== Gamma Wall相关 ========================
# Gamma Wall接近度阈值%
GAMMA_WALL_PROX_THRESHOLD=0.005

# ======================== RIM指标 ========================
# RIM>=0.6视为盘中动能有效
RIM_ACTIVE_THRESHOLD=0.6
# RIM<=0.4偏弱
RIM_WEAK_THRESHOLD=0.4

# ======================== 日志配置 ========================
LOG_LEVEL=INFO
LOG_FILE=vol_quant.log
